#include<stdio.h>
#include<conio.h>
void main()
{
    int i;
    int roll no;
    int marks;
    char name[10];
    FILE *fp:
    fp = fopen("student.txt","w");
    
    printf("enter student info");
    for(i=0;i<3;i++)
    {
    printf("roll no :");
    scanf("%d",&rollno);
    
    printf("name");
    scanf("%s",name);
    
    printf("marks" :)
    scanf("%d",&marks );
    
    fprintf(fp," %d %s %d\n",rollno,name,marks);
    }
    fclose(fp);
}